	<host>ebay.at</host>
	<host>ebay.co.uk</host>
	<host>ebay.com</host>
	<host>ebay.de</host>
	<host>ebay.fr</host>
	<host>ebay.it</host>
	<extract>#ebay.[\w.]+/itm/(?:[-\w]+/)?(?'id'\d+)#</extract>
	<extract>#[?&amp;]item=(?'id'\d+)#</extract>
	<scrape>
		<match>#ebay\.(?!com/)#</match>
		<extract>#"locale":"(?'lang'\w+)"#</extract>
	</scrape>
	<template><![CDATA[
		<a>
			<xsl:attribute name="href">
				<xsl:text>http://www.ebay.</xsl:text>
				<xsl:choose>
					<xsl:when test="@lang='de_AT'">at</xsl:when>
					<xsl:when test="@lang='en_GB'">co.uk</xsl:when>
					<xsl:when test="@lang='de_DE'">de</xsl:when>
					<xsl:when test="@lang='fr_FR'">fr</xsl:when>
					<xsl:when test="@lang='it_IT'">it</xsl:when>
					<xsl:otherwise>com</xsl:otherwise>
				</xsl:choose>
				<xsl:text>/itm/</xsl:text>
				<xsl:choose>
					<xsl:when test="@itemid">
						<xsl:value-of select="@itemid"/>
					</xsl:when>
					<xsl:otherwise>
						<xsl:value-of select="@id"/>
					</xsl:otherwise>
				</xsl:choose>
			</xsl:attribute>
			<xsl:text>eBay item #</xsl:text>
			<xsl:choose>
				<xsl:when test="@itemid">
					<xsl:value-of select="@itemid"/>
				</xsl:when>
				<xsl:otherwise>
					<xsl:value-of select="@id"/>
				</xsl:otherwise>
			</xsl:choose>
		</a>
	]]></template>
</site>