			<xsl:text>base=http://togo.ebay.com/togo/&amp;mode=normal&amp;itemid=</xsl:text>
			<xsl:choose>
				<xsl:when test="@itemid">
					<xsl:value-of select="@itemid"/>
				</xsl:when>
				<xsl:otherwise>
					<xsl:value-of select="@id"/>
				</xsl:otherwise>
			</xsl:choose>
			<xsl:if test="@lang">
				<xsl:text>&amp;lang=</xsl:text>
				<xsl:value-of select="translate(@lang,'_','-')"/>
			</xsl:if>
		]]></flashvars>
