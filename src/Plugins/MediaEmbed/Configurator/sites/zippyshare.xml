<site name="Zippyshare audio files" homepage="http://www.zippyshare.com/" unresponsive="1">
	<example>http://www51.zippyshare.com/v/94505619/file.html</example>

	<tags><tag>file sharing</tag></tags>

	<host>zippyshare.com</host>
	<scrape>
		<match>!/v/!</match>
		<extract>!file=(?'file'\w+)&amp;amp;server=(?'server'\d+)!</extract>
	</scrape>
	<flash width="100%" height="80" style="max-width:900px" src="//api.zippyshare.com/api/player.swf" flashvars="file={@file}&amp;server={@server}&amp;autostart=false"/>
</site>