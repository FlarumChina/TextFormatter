<site name="MediaCrush" homepage="https://mediacru.sh/">
	<example>https://mediacru.sh/vKUNeYFRuzDC</example>

	<tags><tag>misc</tag></tags>

	<host>mediacru.sh</host>
	<extract>!mediacru\.sh/(?'id'\w+)!</extract>
	<scrape url="https://mediacru.sh/api/{@id}">
		<extract>!"height":\s*(?'height'\d+)!</extract>
		<extract>!"width":\s*(?'width'\d+)!</extract>
	</scrape>
	<iframe width="{@width}" height="{@height}" src="https://mediacru.sh/{@id}/frame"/>
</site>