<site name="GameTrailers" homepage="http://www.gametrailers.com/">
	<example>http://www.gametrailers.com/videos/jz8rt1/tom-clancy-s-the-division-vgx-2013--world-premiere-featurette-</example>
	<example>http://www.gametrailers.com/reviews/zalxz0/crimson-dragon-review</example>
	<example>http://www.gametrailers.com/full-episodes/zdzfok/pop-fiction-episode-40--jak-ii--sandover-village</example>

	<tags><tag>gaming</tag></tags>

	<host>gametrailers.com</host>
	<scrape>
		<match>!gametrailers\.com/(?:full-episode|review|video)s/!</match>
		<extract>!embed/(?'id'\d+)!</extract>
	</scrape>
	<iframe width="640" height="360">
		<src><![CDATA[
			<xsl:choose>
				<xsl:when test="starts-with(@id,'mgid:')">
					<xsl:text>//media.mtvnservices.com/embed/</xsl:text>
					<xsl:value-of select="@id"/>
				</xsl:when>
				<xsl:otherwise>
					<xsl:text>//embed.gametrailers.com/embed/</xsl:text>
					<xsl:value-of select="@id"/>
					<xsl:text>?embed=1&amp;suppressBumper=1</xsl:text>
				</xsl:otherwise>
			</xsl:choose>
		]]></src>
	</iframe>
</site>