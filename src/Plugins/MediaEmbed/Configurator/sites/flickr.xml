<site name="Flickr" homepage="https://www.flickr.com/">
	<example>https://www.flickr.com/photos/8757881@N04/2971804544/lightbox/</example>

	<tags><tag>images</tag></tags>

	<host>flickr.com</host>
	<extract>!flickr\.com/photos/[^/]+/(?'id'\d+)!</extract>
	<scrape>
		<match>!flickr\.com/photos/[^/]+/\d!</match>
		<extract>!&lt;meta property="og:image:width" content="(?'width'\d+)!</extract>
		<extract>!&lt;meta property="og:image:height" content="(?'height'\d+)!</extract>
	</scrape>
	<iframe width="{@width}" height="{@height}" src="https://www.flickr.com/photos/_/{@id}/player/"/>
</site>