<?xml version="1.0" encoding="utf-8" ?>
<repository>

	<bbcode name="URL" defaultAttribute="url">
		<usage>[URL={URL;useContent} title={TEXT1;optional}]{TEXT2}[/URL]</usage>
		<template predicate=""><![CDATA[
			<a href="{@url}"><xsl:copy-of select="@title" /><xsl:apply-templates /></a>
		]]></template>
	</bbcode>

	<bbcode name="*" tagName="LI">
		<usage>[*]{TEXT}[/*]</usage>
		<template><![CDATA[
			<li><xsl:apply-templates /></li>
		]]></template>
	</bbcode>

	<bbcode name="IMG">
		<usage>[IMG src={URL;useContent} title={TEXT} alt={TEXT}]</usage>
		<template><![CDATA[
			<img src="{@src}" title="{@title}" alt="{@alt}" />
		]]></template>
	</bbcode>

	<bbcode name="QUOTE">
		<usage>[QUOTE author={TEXT1;optional}]{TEXT2}[/URL]</usage>
		<template><![CDATA[
			<blockquote>
				<div>]]>
					<xsl:if test="@author">
						<![CDATA[<cite>]]>
						<var name="authorStr"><![CDATA[<xsl:value-of select="@author" /> wrote:]]></var>
						<![CDATA[</cite>
					</xsl:if>
					<xsl:apply-templates />
				</div>
			</blockquote>
		]]></template>
	</bbcode>

</repository>