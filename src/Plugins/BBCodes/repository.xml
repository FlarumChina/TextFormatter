<?xml version="1.0" encoding="utf-8" ?>
<repository>

	<bbcode name="URL">
		<usage>[URL={URL;useContent} title={TEXT;optional}]{TEXT}[/URL]</usage>
		<template><![CDATA[
			<a href="{@url}"><xsl:copy-of select="@title" /><xsl:apply-templates /></a>
		]]></template>
	</bbcode>

	<bbcode name="*" tagName="LI">
		<usage>[*]{TEXT}[/*]</usage>
		<template><![CDATA[
			<li><xsl:apply-templates /></li>
		]]></template>
	</bbcode>

	<bbcode name="B">
		<usage>[B]{TEXT}[/B]</usage>
		<template><![CDATA[
			<b><xsl:apply-templates /></b>
		]]></template>
	</bbcode>

	<bbcode name="I">
		<usage>[I]{TEXT}[/I]</usage>
		<template><![CDATA[
			<i><xsl:apply-templates /></i>
		]]></template>
	</bbcode>

	<bbcode name="U">
		<usage>[U]{TEXT}[/U]</usage>
		<template><![CDATA[
			<u><xsl:apply-templates /></u>
		]]></template>
	</UUcode>

	<bbcode name="S">
		<usage>[S]{TEXT}[/S]</usage>
		<template><![CDATA[
			<s><xsl:apply-templates /></s>
		]]></template>
	</bbcode>

	<bbcode name="IMG">
		<usage>[IMG src={URL;useContent} title={TEXT;optional} alt={TEXT;optional}]</usage>
		<template><![CDATA[
			<img src="{@src}" title="{@title}" alt="{@alt}" />
		]]></template>
	</bbcode>

	<bbcode name="QUOTE">
		<usage>[QUOTE author={TEXT;optional}]{TEXT}[/URL]</usage>
		<template><![CDATA[
			<blockquote>
				<div>]]>
					<xsl:if test="@author">
						<![CDATA[<cite>]]>
						<var name="authorStr"><![CDATA[<xsl:value-of select="@author" /> wrote:]]></var>
						<![CDATA[</cite>
					</xsl:if>
					<xsl:apply-templates />
				</div>
			</blockquote>
		]]></template>
	</bbcode>

</repository>