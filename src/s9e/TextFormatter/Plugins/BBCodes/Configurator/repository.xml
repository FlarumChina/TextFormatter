	<!-- [CODE] BBCode, uses Hightlight.js for highlighting: http://softwaremaniacs.org/soft/highlight/en/ -->
	<bbcode name="CODE">
		<usage>[CODE lang={IDENTIFIER;optional}]{TEXT}[/CODE]</usage>
		<template><![CDATA[
			<pre>
				<code class="{@lang}">
					<xsl:apply-templates />
				</code>
			</pre>
			<!-- Include the necessary JavaScript/CSS if it's the last CODE tag -->
			<xsl:if test="not(following::CODE)">
				<!-- Append the stylesheet to head -->
				<script>var l=document.createElement("link");l.type="text/css";l.rel="stylesheet";l.href="]]><var name="stylesheetUrl" description="URL of the Highlight.js stylesheet">//cdnjs.cloudflare.com/ajax/libs/highlight.js/7.3/styles/default.min.css</var><![CDATA[";document.getElementsByTagName("head")[0].appendChild(l)</script>
				<!-- Load the script and use the onload event to trigger highlighting -->
				<script onload="hljs.initHighlighting()" src="]]><var name="scriptUrl" description="URL of the Highlight.js script">//cdnjs.cloudflare.com/ajax/libs/highlight.js/7.3/highlight.min.js</var><![CDATA["></script>
			</xsl:if>
		]]></template>
		<rules>
			<denyAll />
		</rules>
	</bbcode>

