#!/bin/sh
TMP=/dev/shm/phpunit.out
DONE=

ROOT=`pwd`

for FILEPATH in $(git diff --cached --name-only)
do
	if [[ $FILEPATH != src/* ]] && [[ $FILEPATH != tests/* ]];
	then
		continue;
	fi

	if [[ -n `git diff --cached -b "$ROOT/src" "$ROOT/tests"` ]]
	then
		cd "$ROOT/tests"
		phpunit -c "$ROOT/tests/phpunit.xml" | tee $TMP

		if [[ `tail -n3 $TMP` != *OK* ]]
		then
			exit 1;
		fi

		cd "$ROOT"
		git update-index --add "docs/testdox.txt"
	fi
done

exit 0