#!/bin/sh
TMP=/dev/shm/phpunit.out
DONE=

cd $(readlink -f $(dirname $(dirname $(dirname "$0"))))

for FILEPATH in $(git diff-index --name-only HEAD)
do
	if [[ $FILEPATH != src/* ]] && [[ $FILEPATH != tests/* ]];
	then
		continue;
	fi

	MODULE=${FILEPATH#*/}
	MODULE=${MODULE%%/*}

	if [[ `expr index "$DONE" "$MODULE"` == 0 ]]
	then
		DONE="$DONE $MODULE"

		phpunit -c tests/phpunit.xml tests/$DIR | tee $TMP

		if [[ `tail -n2 $TMP` != *OK* ]]
		then
			BRANCH=`git branch --color=never | grep ^\\*`

#			if [[ $BRANCH == *master* ]]
#			then
				exit 1;
#			fi
		fi
	fi
done

exit 0