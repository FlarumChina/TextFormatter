<?xml version="1.0" encoding="utf-8" ?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         verbose="true"
>
	<testsuites>
		<testsuite name="Acl">
			<directory>./Acl</directory>
		</testsuite>

		<testsuite name="SimpleDOM">
			<directory>./SimpleDOM</directory>
		</testsuite>

		<testsuite name="TextFormatter">
			<file>./TextFormatter/AutoloadersTest.php</file>
			<file>./TextFormatter/ConfigBuilderTest.php</file>
			<file>./TextFormatter/ParserTest.php</file>
			<file>./TextFormatter/PluginConfigTest.php</file>
			<file>./TextFormatter/PredefinedBBCodesTest.php</file>
			<file>./TextFormatter/RendererTest.php</file>
			<file>./TextFormatter/Plugins/AutolinkConfigTest.php</file>
			<file>./TextFormatter/Plugins/AutolinkParserTest.php</file>
			<file>./TextFormatter/Plugins/BBCodesConfigTest.php</file>
			<file>./TextFormatter/Plugins/BBCodesParserTest.php</file>
			<file>./TextFormatter/Plugins/CensorConfigTest.php</file>
			<file>./TextFormatter/Plugins/CensorParserTest.php</file>
			<file>./TextFormatter/Plugins/EmoticonsConfigTest.php</file>
			<file>./TextFormatter/Plugins/EmoticonsParserTest.php</file>
			<file>./TextFormatter/Plugins/FabricConfigTest.php</file>
			<file>./TextFormatter/Plugins/FabricParserTest.php</file>
			<file>./TextFormatter/Plugins/WittyPantsConfigTest.php</file>
			<file>./TextFormatter/Plugins/WittyPantsParserTest.php</file>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory>../src</directory>
		</whitelist>
	</filter>
</phpunit>