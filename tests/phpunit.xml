<?xml version="1.0" encoding="utf-8" ?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="autoloader.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         verbose="true"
>
	<logging>
		<log type="testdox-text" target="../docs/testdox.txt" />
	</logging>

	<groups>
		<include>
			<group>__nogroup__</group>
			<group>functional</group>
			<group>internals</group>
		</include>
	</groups>

	<testsuites>
		<testsuite name="TextFormatter">
			<!-- Test the base classes and traits first -->
			<file>Generator/Collections/CollectionTest.php</file>
			<file>Generator/Collections/NormalizedCollectionTest.php</file>
			<file>Generator/Collections/NormalizedListTest.php</file>
			<file>Generator/Traits/CollectionProxyTest.php</file>
			<file>Generator/Traits/ConfigurableTest.php</file>

			<file>Generator/Collections/AttributeCollectionTest.php</file>
			<file>Generator/Collections/AttributeListTest.php</file>
			<file>Generator/Collections/AttributePreprocessorCollectionTest.php</file>
			<file>Generator/Collections/FilterChainTest.php</file>
			<file>Generator/Collections/RulesetTest.php</file>
			<file>Generator/Collections/TagCollectionTest.php</file>
			<file>Generator/Collections/TemplatesetTest.php</file>
			<file>Generator/Helpers/ConfigHelperTest.php</file>
			<file>Generator/Helpers/HTML5/TemplateForensicsTest.php</file>
			<!-- RulesGenerator depends on TemplateForensics -->
			<file>Generator/Helpers/HTML5/RulesGeneratorTest.php</file>
			<file>Generator/Helpers/RegexpBuilderTest.php</file>
			<file>Generator/Helpers/RegexpParserTest.php</file>
			<file>Generator/Helpers/RulesHelperTest.php</file>
			<file>Generator/Helpers/StylesheetHelperTest.php</file>
			<file>Generator/Helpers/TemplateCheckerTest.php</file>
			<file>Generator/Helpers/TemplateOptimizerTest.php</file>
			<file>Generator/Items/AttributeTest.php</file>
			<file>Generator/Items/AttributePreprocessorTest.php</file>
			<file>Generator/Items/CallbackTemplateTest.php</file>
			<file>Generator/Items/TagTest.php</file>
			<file>Generator/UrlConfigTest.php</file>
			<file>Generator/Validators/AttributeNameTest.php</file>
			<file>Generator/Validators/TagNameTest.php</file>

			<file>Plugins/BBCodes/BBCodeTest.php</file>
			<file>Plugins/BBCodes/BBCodeCollectionTest.php</file>
			<file>Plugins/BBCodes/BBCodeMonkeyTest.php</file>
			<file>Plugins/BBCodes/RepositoryTest.php</file>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<file>../src/Generator/Collections/AttributeCollection.php</file>
			<file>../src/Generator/Collections/AttributeList.php</file>
			<file>../src/Generator/Collections/AttributePreprocessorCollection.php</file>
			<file>../src/Generator/Collections/Collection.php</file>
			<file>../src/Generator/Collections/FilterChain.php</file>
			<file>../src/Generator/Collections/NormalizedCollection.php</file>
			<file>../src/Generator/Collections/NormalizedList.php</file>
			<file>../src/Generator/Collections/Ruleset.php</file>
			<file>../src/Generator/Collections/TagCollection.php</file>
			<file>../src/Generator/Collections/Templateset.php</file>
			<file>../src/Generator/Helpers/ConfigHelper.php</file>
			<file>../src/Generator/Helpers/HTML5/RulesGenerator.php</file>
			<file>../src/Generator/Helpers/HTML5/TemplateForensics.php</file>
			<file>../src/Generator/Helpers/RegexpBuilder.php</file>
			<file>../src/Generator/Helpers/RegexpParser.php</file>
			<file>../src/Generator/Helpers/RulesHelper.php</file>
			<file>../src/Generator/Helpers/StylesheetHelper.php</file>
			<file>../src/Generator/Helpers/TemplateChecker.php</file>
			<file>../src/Generator/Helpers/TemplateOptimizer.php</file>
			<file>../src/Generator/Items/Attribute.php</file>
			<file>../src/Generator/Items/AttributePreprocessor.php</file>
			<file>../src/Generator/Items/CallbackTemplate.php</file>
			<file>../src/Generator/Items/Tag.php</file>
			<file>../src/Generator/Traits/CollectionProxy.php</file>
			<file>../src/Generator/Traits/Configurable.php</file>
			<file>../src/Generator/UrlConfig.php</file>
			<file>../src/Generator/Validators/AttributeName.php</file>
			<file>../src/Generator/Validators/TagName.php</file>

			<file>../src/Plugins/BBCodes/BBCode.php</file>
			<file>../src/Plugins/BBCodes/BBCodeCollection.php</file>
			<file>../src/Plugins/BBCodes/BBCodeMonkey.php</file>
			<file>../src/Plugins/BBCodes/Repository.php</file>
		</whitelist>
	</filter>
</phpunit>