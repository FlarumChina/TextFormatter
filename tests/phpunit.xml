<?xml version="1.0" encoding="utf-8" ?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="autoloader.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         verbose="true"
>
	<logging>
		<log type="testdox-text" target="../docs/testdox.txt" />
	</logging>

	<groups>
		<include>
			<group>__nogroup__</group>
			<group>functional</group>
			<group>internals</group>
		</include>
	</groups>

	<testsuites>
		<testsuite name="TextFormatter">
			<!-- Test the base classes first -->
			<file>ConfigBuilder/Collections/CollectionTest.php</file>
			<file>ConfigBuilder/Collections/NormalizedCollectionTest.php</file>

			<file>ConfigBuilder/Collections/AttributeCollectionTest.php</file>
			<file>ConfigBuilder/Collections/AttributePreprocessorCollectionTest.php</file>
			<file>ConfigBuilder/Collections/FilterChainTest.php</file>
			<file>ConfigBuilder/Collections/RulesetTest.php</file>
			<file>ConfigBuilder/Collections/TagCollectionTest.php</file>
			<file>ConfigBuilder/Helpers/HTML5/TagProxyTest.php</file>
			<file>ConfigBuilder/Helpers/RegexpHelperTest.php</file>
			<file>ConfigBuilder/Items/AttributeTest.php</file>
			<file>ConfigBuilder/Items/AttributePreprocessorTest.php</file>
			<file>ConfigBuilder/Items/TagTest.php</file>
			<file>ConfigBuilder/Validators/AttributeNameTest.php</file>
			<file>ConfigBuilder/Validators/TagNameTest.php</file>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<file>../src/ConfigBuilder/Collections/AttributeCollection.php</file>
			<file>../src/ConfigBuilder/Collections/AttributePreprocessorCollection.php</file>
			<file>../src/ConfigBuilder/Collections/Collection.php</file>
			<file>../src/ConfigBuilder/Collections/FilterChain.php</file>
			<file>../src/ConfigBuilder/Collections/NormalizedCollection.php</file>
			<file>../src/ConfigBuilder/Collections/Ruleset.php</file>
			<file>../src/ConfigBuilder/Collections/TagCollection.php</file>
			<file>../src/ConfigBuilder/Helpers/HTML5/TagProxy.php</file>
			<file>../src/ConfigBuilder/Helpers/RegexpHelper.php</file>
			<file>../src/ConfigBuilder/Items/Attribute.php</file>
			<file>../src/ConfigBuilder/Items/AttributePreprocessor.php</file>
			<file>../src/ConfigBuilder/Items/Tag.php</file>
			<file>../src/ConfigBuilder/Validators/AttributeName.php</file>
			<file>../src/ConfigBuilder/Validators/TagName.php</file>
		</whitelist>
	</filter>
</phpunit>