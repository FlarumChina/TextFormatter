<?xml version="1.0"?>
<template outputMethod="html">
	<switch hash-key=".">
		<case hash-value="'" test=".=&quot;'&quot;">
			<output escape="text" type="literal">.</output>
		</case>
		<case hash-value="&quot;" test=".='&quot;'">
			<output escape="text" type="literal">.</output>
		</case>
		<case hash-value="&quot;'&quot;" test=".=concat('&quot;', &quot;'&quot;, '&quot;')">
			<output escape="text" type="literal">.</output>
		</case>
		<case hash-value="" test=".=''">
			<output escape="text" type="literal">.</output>
		</case>
	</switch>
</template>