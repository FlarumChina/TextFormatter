<?xml version="1.0"?>
<template outputMethod="html">
	<switch hash-key="@foo">
		<case hash-value="1" test="@foo = 1">
			<output escape="text" type="literal">.</output>
		</case>
		<case hash-value="2" test="@foo = 2">
			<output escape="text" type="literal">.</output>
		</case>
		<case hash-value="3" test="@foo = 3">
			<output escape="text" type="literal">.</output>
		</case>
		<case hash-value="4" test="4 = @foo">
			<output escape="text" type="literal">.</output>
		</case>
	</switch>
</template>