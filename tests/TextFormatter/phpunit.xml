<?xml version="1.0" encoding="utf-8" ?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         verbose="true"
>
	<logging>
		<log type="testdox-text" target="../../docs/testdox.TextFormatter.txt" />
	</logging>

	<testsuites>
		<testsuite name="TextFormatter">
			<file>AutoloadersTest.php</file>
			<file>ConfigBuilderTest.php</file>
			<file>ParserTest.php</file>
			<file>PluginConfigTest.php</file>
			<file>PredefinedBBCodesTest.php</file>
			<file>RendererTest.php</file>
			<file>Plugins/AutolinkConfigTest.php</file>
			<file>Plugins/AutolinkParserTest.php</file>
			<file>Plugins/BBCodesConfigTest.php</file>
			<file>Plugins/BBCodesParserTest.php</file>
			<file>Plugins/CensorConfigTest.php</file>
			<file>Plugins/CensorParserTest.php</file>
			<file>Plugins/EmoticonsConfigTest.php</file>
			<file>Plugins/EmoticonsParserTest.php</file>
			<file>Plugins/FabricConfigTest.php</file>
			<file>Plugins/FabricParserTest.php</file>
			<file>Plugins/WittyPantsConfigTest.php</file>
			<file>Plugins/WittyPantsParserTest.php</file>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory>../../src</directory>
		</whitelist>
	</filter>
</phpunit>